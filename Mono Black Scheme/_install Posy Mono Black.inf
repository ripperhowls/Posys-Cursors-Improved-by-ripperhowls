; Posy's Cursor Mono Black
; michieldb.nl

[Version]
signature="$CHICAGO$"

[DefaultInstall]
CopyFiles = Scheme.Cur, Scheme.Txt
AddReg    = Scheme.Reg

[DestinationDirs]
Scheme.Cur = 10,"%CUR_DIR%"
Scheme.Txt = 10,"%CUR_DIR%"

[Scheme.Reg]
HKCU,"Control Panel\Cursors\Schemes","%SCHEME_NAME%",,"%10%\%CUR_DIR%\%pointer%,%10%\%CUR_DIR%\%help%,%10%\%CUR_DIR%\%work%,%10%\%CUR_DIR%\%busy%,%10%\%CUR_DIR%\%cross%,%10%\%CUR_DIR%\%Text%,%10%\%CUR_DIR%\%Hand%,%10%\%CUR_DIR%\%unavailiable%,%10%\%CUR_DIR%\%Vert%,%10%\%CUR_DIR%\%Horz%,%10%\%CUR_DIR%\%Dgn1%,%10%\%CUR_DIR%\%Dgn2%,%10%\%CUR_DIR%\%move%,%10%\%CUR_DIR%\%alternate%,%10%\%CUR_DIR%\%link%,%10%\%CUR_DIR%\%pin%,%10%\%CUR_DIR%\%person%"

[Scheme.Cur]
Posy Black default.cur
Posy Black help.cur
Posy mono black background mono max 96.ani
Posy mono wait max 96.ani
Posy beam.cur
Posy mono forbidden.cur
Posy Black size NS.cur
Posy Black size EW.cur
Posy Black size NwSe.cur
Posy Black size NeSw.cur
Posy move.cur
Posy hand.cur
Posy precise.cur
Posy Black pen.cur
Posy alt.cur
Posy mono pin black.cur
Posy mono person black.cur

[Scheme.Txt]

[Strings]
CUR_DIR       = "Cursors\Posys Cursor Mono Black Improved by ripperhowls"
SCHEME_NAME   = "Posy's Cursor Mono Black Improved by ripperhowls"
pointer       = "Posy Black default.cur"
help          = "Posy Black help.cur"
work          = "Posy mono black background mono max 96.ani"
busy          = "Posy mono wait max 96.ani"
text          = "Posy beam.cur"
unavailiable  = "Posy mono forbidden.cur"
vert          = "Posy Black size NS.cur"
horz          = "Posy Black size EW.cur"
dgn1          = "Posy Black size NwSe.cur"
dgn2          = "Posy Black size NeSw.cur"
move          = "Posy move.cur"
link          = "Posy hand.cur"
cross         = "Posy precise.cur"
hand          = "Posy Black pen.cur"
alternate     = "Posy alt.cur"
pin             = "Posy mono pin black.cur"
person        = "Posy mono person black.cur"